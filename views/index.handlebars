<h1>Eat-Da-Burger!</h1>

  <div id="plated">

    <ol>
      {{#each burgers}}
      {{#unless eaten}}
      {{> burgers/burger-block eat=false}}
      {{/unless}}
      {{/each}}
    </ol>
  </div>

  <div id="devoured">

    <ol>
      {{#each burgers}}
      {{#if eaten}}
      {{> burgers/burger-block eat=true}}
      {{/if}}
      {{/each}}
    </ol>
  </div>
 

<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Sleepy?</label><br>
    <input type="radio" name="eaten" value="1" checked> Plated!<br>
    <input type="radio" name="eaten" value="0"> Eaten
  </div>

  <button id="submit" type="submit">Submit</button>
</form>
