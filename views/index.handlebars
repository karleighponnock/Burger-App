<h1>Eat-Da-Burger!</h1>

  <div id="plated">

    <ol>
      {{#each burgers}}
      {{#unless eaten}}
      {{> burgers/burger-block eat=true}}
      {{/unless}}
      {{/each}}
    </ol>
  </div>

  <div id="devoured">

    <ol>
      {{#each burgers}}
      {{#if eaten}}
      {{> burgers/burger-block eat=false}}
      {{/if}}
      {{/each}}
    </ol>
  </div>
 


  <div id="addNew">
    <form class="create-form">

      <div class="form-group">
        <input type="text" id="ca" name="name">
      </div>
    

      
      <button type="submit">Submit</button>
  </div>

</form>