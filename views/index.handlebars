<h1>Eat-Da-Burger!</h1>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Order custom burger here:</label><br>
    <input type="text" id="ca" name="name">
  </div>

<div class="form-group">
    <label for="eaten">Eaten?</label><br>
    <input type="radio" name="eaten" value="1" checked> Order this dish!<br>
    <input type="radio" name="eaten" value="0"> Add to menu!
  </div>

  <button id="submit" type="submit">Submit</button>
</form>

<div id="burgers">
  <div id="plated">

    <ol>
      {{#each burgers}}
      {{#unless eaten}}
      {{> burgers/burger-block eat=true}}
      {{/unless}}
      {{/each}}
    </ol>
  </div>

  <div id="devoured">

    <ol>
      {{#each burgers}}
      {{#if eaten}}
      {{> burgers/burger-block eat=false}}
      {{/if}}
      {{/each}}
    </ol>
  </div>
 
</div>

